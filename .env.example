# -------------------------------------------------------------------------
# DATABASE (POSTGRES)
# -------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# -------------------------------------------------------------------------
# RABBITMQ
# -------------------------------------------------------------------------
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/

# -------------------------------------------------------------------------
# SECRETS (REQUIRED)
# -------------------------------------------------------------------------
# These are required by docker-compose.yml
# Use long, random strings in production!
JWT_SECRET=dev-secret-keep-it-safe-12345
INTERNAL_SECRET_KEY=shared-internal-key-67890

# -------------------------------------------------------------------------
# TRACING
# -------------------------------------------------------------------------
TRACING_ENABLED=true
OTLP_ENDPOINT=cityevents-jaeger:4318
SERVICE_VERSION=1.0.0

# -------------------------------------------------------------------------
# OTHER
# -------------------------------------------------------------------------
APP_ENV=dev
HTTP_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# -------------------------------------------------------------------------
# OAuth GOOGLE
# -------------------------------------------------------------------------
GOOGLE_CLIENT_ID=something.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=my-secret
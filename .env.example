# City Event Platform - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED SECRETS - You MUST set these before running docker-compose
# =============================================================================

# PostgreSQL credentials
POSTGRES_USER=cityevents
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_DB=cityevents

# JWT secret for access/refresh token signing
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_32_BYTE_SECRET

# Internal service-to-service authentication key
# Generate with: openssl rand -base64 32
INTERNAL_SECRET_KEY=CHANGE_ME_GENERATE_32_BYTE_SECRET

# =============================================================================
# OPTIONAL - Override defaults if needed
# =============================================================================

# RabbitMQ credentials (default: guest/guest for local dev)
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/

# Application environment
APP_ENV=dev

# Email verification/password reset base URLs
# VERIFY_EMAIL_BASE_URL=http://localhost:8080/auth/v1/verify-email/confirm?token=
# PASSWORD_RESET_BASE_URL=http://localhost:8080/auth/v1/password/reset/validate?token=

# SMTP settings (defaults to mailpit for local dev)
# SMTP_HOST=mailpit
# SMTP_PORT=1025
